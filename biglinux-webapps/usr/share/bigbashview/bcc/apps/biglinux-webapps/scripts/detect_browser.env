resolve_icon() {
    case "$1" in
    com.brave.Browser) icon='brave' ;;
    electron*) icon='electron' ;;
    *)
        icon="${1##*.}"
        icon="${icon/-browser//}"
        icon="${icon%-stable}" # removes versioning
        icon="${icon%-community}"
        icon="${icon#microsoft-}" # removes branding
        icon="${icon#google-}"
        icon="${icon#flashpeak-}"
        icon="${icon,,}" # to lowercase;;
        ;;
    esac
    printf "%s" "$icon"
}
